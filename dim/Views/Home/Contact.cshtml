
@{
    ViewData["Title"] = "Contact";
}
@model dim.Models.ContactFormViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Contact</title>
</head>
    <body>
        <form method="post">
            <div>
                <div id="input" class="form-group">
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div id="input" class="form-group">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div id="input" class="form-group">
                    <label asp-for="@Model.Phone"></label>
                    <input asp-for="@Model.Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div id="input" class="form-group">
                    <label asp-for="@Model.Content"></label>
                    <textarea asp-for="@Model.Content" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <p>
                    Натискайки бутона "Изпратете ни съобщение" за да ни изпратите съобщението.
                </p>
            </div>

            <button type="submit" class="btn btn-primary">Изпратете ни съобщение</button>
        </form>
    </body>
</html>

